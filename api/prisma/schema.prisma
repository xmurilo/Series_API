model Log {
  id           Int      @id @default(autoincrement())
  desc    String   @db.VarChar(60)
  complement  String   @db.VarChar(255)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt  
  user      User  @relation(fields: [userId], references: [id])
  userId    Int
  @@map("logs")
}



enum StreamingType {
  default
  Netflix
  Amazon
  Disney
  Max
  Globo
  Youtube
  Outros
}

enum Genres { 
  default
  Acao
  Aventura
  Comedia
  Documentario
  Drama
  Ficcao
  Musical
  Romance
  Suspense
  Terror
}
