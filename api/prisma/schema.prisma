model Serie {
  id            Int            @id @default(autoincrement())
  name          String         @db.VarChar(60)
  streaming     StreamingType  @default(default)
  genre         Genres         @default(default) 
  user          User           @relation(fields: [userId], references: [id])
  userId        Int
  deleted      Boolean         @default(false)
  @@map("series")
}

