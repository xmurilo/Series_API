generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(60)
  email        String   @db.VarChar(40)
  password     String   @db.VarChar(60)
  token        String?  @db.VarChar(120)
  series      Serie[]
  logs         Log[]
  @@map("users")
}

// {
//  "name": "Lucas",
